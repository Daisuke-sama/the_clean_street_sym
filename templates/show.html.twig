{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>

    <div>
        <p>
            Let's see the article, and then read it.
        </p>
    </div>


    <h2>Comments [{{ comments|length }}]</h2>
    <div>
        {% for comment in comments %}
            <blockquote>{{ comment }}</blockquote>
        {% endfor %}
    </div>
{% endblock %}